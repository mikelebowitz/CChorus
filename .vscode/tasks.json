      "label": "Start Backend", 
      "type": "npm",
      "script": "dev:server",
      "group": "build",
      "problemMatcher": [],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "new",
        "showReuseMessage": false,
        "clear": false,
        "group": "cchorus"
      },
      "runOptions": {
        "runOn": "folderOpen"
      },
      "detail": "Auto-start CChorus backend API server on port 3001"
    },
    {
      "label": "Start Dashboard",
      "type": "shell",
      "command": "node tools/dashboard-server.js",
      "group": "build",
      "problemMatcher": [],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "new",
        "showReuseMessage": false,
        "clear": false,
        "group": "cchorus"
      },
      "runOptions": {
        "runOn": "folderOpen"
      },
