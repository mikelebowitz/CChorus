    },
    {
      "label": "Start CChorus",
      "dependsOn": ["Start Frontend", "Start Backend", "Start Dashboard"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": [],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": false
      },
      "detail": "Start both frontend and backend servers"
    },
    {
      "label": "Stop All Servers",
      "type": "shell",
      "command": "pkill -f 'node.*dev' || true; pkill -f 'dashboard-server.js' || true",
      "group": "build",
      "problemMatcher": [],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": false
      },
      "detail": "Stop all running development servers"
